extends layout

block content

  if errorMessage
    p.error= errorMessage
block content
  
    h1(style="text-align: center;") Login
    .loginform-container
      form(action="/login", method="post", class="loginform-container")
        label(for="Username", id="login-label") Username:
        input(type="text", id="Username", name="Username", required, class="form-input")

        label(for="Email",, id="login-label") Email:
        input(type="Email", id="Email", name="Email", required, class="form-input")

        label(for="Password",, id="login-label") Password:
        input(type="Password", id="Password", name="Password", required, class="form-input")
        br

        button(type="submit") Login
